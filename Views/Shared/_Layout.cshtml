<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - MyBlog</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (Roles.IsUserInRole("Admin"))
    {
        <header>
            <div id="adminbar">
                <ul>
                    <li class="menupop">
                        <div class="first_menu">@Html.ActionLink("新建", "Create", "Post")</div>
                        <div class="wrapper">
                            <ul class="sub_menu">
                                <li>@Html.ActionLink("日志", "Create", "Post")</li>

                                <li>@Html.ActionLink("用户", "Register", "Account")</li>
                            </ul>
                        </div>
                    </li>

                    <li class="menupop">
                        <div class="first_menu">@Html.ActionLink("管理", "", "")</div>
                        <div class="wrapper">
                            <ul class="sub_menu">
                                <li>@Html.ActionLink("日志", "Index", "Post")</li>
                                <li>@Html.ActionLink("分类", "Index", "Category")</li>
                                <li>@Html.ActionLink("用户", "Index", "User")</li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </header>
    }

    <header>

        <div class="content-wrapper">
            <div class="">
                <p class="site-title">
                    @*@Html.ActionLink("将你的徽标放置在此处", "Index", "Home")*@

                 @*   <img width="960" src="~/Images/capture.png"/>*@
                </p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("主页", "Index", "Home")</li>
                        <li>@Html.ActionLink("关于", "About", "Home")</li>
                        <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Blog of amos402</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
